apiVersion: v1
kind: Secret
metadata:
  name: service-portfolio-secrets
  namespace: service-portfolio
type: Opaque
stringData:
  # --- OpenAI ---
  OPENAI_API_KEY: "REPLACE_ME"

  # --- GitHub App (lectura de repos) ---
  GITHUB_APP_CLIENT_ID: "REPLACE_ME"
  GITHUB_APP_INSTALLATION_ID: "REPLACE_ME"

  # --- GitHub OAuth (para login de usuarios) ---
  GITHUB_OAUTH_CLIENT_ID: "REPLACE_ME"
  GITHUB_OAUTH_CLIENT_SECRET: "REPLACE_ME"

  # --- PostgreSQL ---
  DB_HOST: "REPLACE_ME"
  DB_PORT: "5432"
  DB_NAME: "serviceportfolio"
  DB_USERNAME: "REPLACE_ME"
  DB_PASSWORD: "REPLACE_ME"
---
apiVersion: v1
kind: Secret
metadata:
  name: github-app-private-key
  namespace: service-portfolio
type: Opaque
stringData:
  # Paste the private key content directly (stringData handles encoding)
  private-key.pem: |
    -----BEGIN PRIVATE KEY-----
    REPLACE_WITH_PRIVATE_KEY_CONTENT
    -----END PRIVATE KEY-----
